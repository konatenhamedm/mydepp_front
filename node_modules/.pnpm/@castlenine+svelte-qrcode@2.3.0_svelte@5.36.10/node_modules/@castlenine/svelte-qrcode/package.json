{
  "name": "@castlenine/svelte-qrcode",
  "description": "QR Code generator component for Svelte & SvelteKit, with no dependencies",
  "version": "2.3.0",
  "license": "MIT",
  "author": {
    "name": "Alexandre Castlenine",
    "url": "https://github.com/Castlenine"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/castlenine/svelte-qrcode.git"
  },
  "bugs": {
    "url": "https://github.com/castlenine/svelte-qrcode/issues"
  },
  "keywords": [
    "2fa",
    "authentication",
    "base64",
    "code",
    "component",
    "logo",
    "multifactor",
    "multi-factor",
    "qr",
    "qrcode",
    "qr-code",
    "qrimage",
    "qrsvg",
    "svelte",
    "sveltekit",
    "svg",
    "totp"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "commit": "git status && git-cz",
    "prettier": "prettier --config \"./.prettierrc.yaml\" --ignore-path \"./.prettierignore\" --check .",
    "prettier:fix": "prettier --config \"./.prettierrc.yaml\" --ignore-path \"./.prettierignore\" --write .",
    "eslint": "eslint --config \"./.eslintrc.cjs\" --ignore-path \"./.eslintignore\" .",
    "eslint:fix": "eslint --config \"./.eslintrc.cjs\" --ignore-path \"./.eslintignore\" . --fix",
    "stylelint": "stylelint --config \"./.stylelintrc.yaml\" \"**/*.{css,scss,sass,html,js,ts,cjs,mjs,svelte,svg}\"",
    "stylelint:fix": "stylelint --config \"./.stylelintrc.yaml\" --fix \"**/*.{css,scss,sass,html,js,ts,cjs,mjs,svelte,svg}\"",
    "clean-code": "pnpm run stylelint:fix ; pnpm run prettier:fix ; pnpm run eslint:fix",
    "publish-package": "npm publish -access public",
    "prepare": "lefthook install"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "svelte": ">=3.54.0"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "import": "./dist/index.js",
  "svelte": "./dist/index.js",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@sveltejs/adapter-auto": "^2.1.1",
    "@sveltejs/kit": "^1.30.4",
    "@sveltejs/package": "^2.3.5",
    "@types/eslint": "^8.56.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "commitizen": "^4.3.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^1.7.1",
    "lefthook": "^1.7.18",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-eslint-cli": "^8.0.1",
    "prettier-eslint": "^16.3.0",
    "prettier-plugin-svelte": "^3.2.7",
    "publint": "^0.2.11",
    "stylelint": "^16.9.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-no-unsupported-browser-features": "^8.0.1",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.2",
    "stylelint-scss": "^6.7.0",
    "svelte-check": "^4.0.4",
    "svelte-eslint-parser": "^0.41.1",
    "svelte-preprocess": "^6.0.3",
    "svelte": "^4.2.19",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "vite": "^4.5.5"
  }
}
